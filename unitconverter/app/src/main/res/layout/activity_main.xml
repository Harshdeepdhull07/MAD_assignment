<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNIT CONVERTOR APPLICATION"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Input Field -->
    <EditText
        android:padding="48dp"
        android:id="@+id/inputValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter value"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"/>

    <!-- Unit Selector -->
    <Spinner
        android:padding="48dp"
        android:id="@+id/unitSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inputValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"/>

    <!-- Output Labels -->
    <TextView
        android:id="@+id/feetResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Feet: "
        app:layout_constraintTop_toBottomOf="@id/unitSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"/>

    <TextView
        android:id="@+id/inchResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inches: "
        app:layout_constraintTop_toBottomOf="@id/feetResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"/>

    <TextView
        android:id="@+id/cmResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Centimeters: "
        app:layout_constraintTop_toBottomOf="@id/inchResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"/>

    <TextView
        android:id="@+id/meterResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Meters: "
        app:layout_constraintTop_toBottomOf="@id/cmResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"/>

    <TextView
        android:id="@+id/yardResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Yards: "
        app:layout_constraintTop_toBottomOf="@id/meterResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
